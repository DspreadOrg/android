<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 底部阴影层 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFE8E8E8" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- 主体层，通过inset实现内凹 -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFF5F5F5" />
            <stroke
                android:width="1dp"
                android:color="#FFD0D0D0" />
            <corners android:radius="10dp" />
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
        </shape>
    </item>
</layer-list>