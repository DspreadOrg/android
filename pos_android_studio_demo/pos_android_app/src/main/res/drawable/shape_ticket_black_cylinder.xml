<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影层 - 向下偏移6dp，有一定模糊 -->
    <item
        android:left="2dp"
        android:top="6dp"
        android:right="2dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffffff" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- 内容层 -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffffff" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>