<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:binding="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.dspread.pos.ui.payment.PaymentViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rel_sale_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <!-- close btn -->
        <RelativeLayout
            android:id="@+id/close_button_container"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            binding:onClickCommand="@{viewModel.cancleTxnsCommand}">

            <ImageView
                android:id="@+id/iv_close_black"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/btn_close_black"
                android:contentDescription="@string/black_mark_close" />

        </RelativeLayout>

        <!-- ============ payment layout ============ -->
        <LinearLayout
            android:visibility="@{viewModel.showPinpad ? View.GONE : View.VISIBLE}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Total label -->
            <TextView
                android:id="@+id/txt_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/total"
                android:textColor="@color/text_color"
                android:textSize="@dimen/d70_total_text_size" />

            <!-- amount -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text="@{viewModel.amount}"
                android:textColor="@color/text_color"
                android:textSize="@dimen/d70_amount_text_size"
                android:textStyle="bold" />

            <!-- D70 cards images -->
            <ImageView
                android:id="@+id/d70_imageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txt_wait_insert_tap_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_user_to_tap_card"
                android:textColor="@color/red_color"
                android:textStyle="bold"
                android:textSize="@dimen/d70_prompt_text_size"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

        <!-- ============ PIN input ============ -->
        <LinearLayout
            android:visibility="@{viewModel.showPinpad ? View.VISIBLE : View.GONE}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- PIN title -->
<!--            <TextView-->
<!--                android:id="@+id/pin_title"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="40dp"-->
<!--                android:layout_marginStart="20dp"-->
<!--                android:text="PIN"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="24sp"-->
<!--                android:textStyle="bold" />-->

            <!-- Total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/totalLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@{viewModel.amount}"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- PIN input area -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:keepScreenOn="true"
                android:orientation="vertical"
                android:paddingHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_pin_text"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/pinpadEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext_no_cursor"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:longClickable="false"
                    android:textCursorDrawable="@null"
                    android:textSize="36sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Loading -->
        <include
            layout="@layout/layout_payment_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:viewModel="@{viewModel}" />

    </RelativeLayout>
</layout>