<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.dspread.pos.ui.payment.PaymentViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/rel_sale_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- amount display -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <LinearLayout
                    android:visibility="@{viewModel.showPinpad ? View.GONE : View.VISIBLE}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_below="@+id/iv_close_black">

                    <TextView
                        android:id="@+id/txt_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/total"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/common_total_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:maxLines="1"
                        android:text="@{viewModel.amount}"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/common_amount_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_wait_insert_tap_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prompt_user_to_tap_card"
                        android:textColor="@color/red_color"
                        android:textSize="@dimen/common_prompt_text_size"
                        />
                    <TextView
                        android:id="@+id/txt_device_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prompt_user_to_tap_card"
                        android:gravity="center_horizontal"
                        android:textColor="@color/background_color"
                        android:textSize="15sp"
                        />
                </LinearLayout>

                <!-- close btn -->
                <ImageView
                    android:id="@+id/iv_close_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="16dp"
                    android:background="@null"
                    android:padding="16dp"
                    android:src="@mipmap/btn_close_black"
                    binding:onClickCommand="@{viewModel.cancleTxnsCommand}"
                    android:visibility="@{viewModel.showPinpad ? View.GONE : View.VISIBLE}"/>
            </RelativeLayout>



            <!-- card guide AnimationView-->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="@{viewModel.showPinpad || viewModel.cardsInsertedStatus ? View.GONE : View.VISIBLE}"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <!-- cards brand label -->
            <LinearLayout
                android:id="@+id/lin_cardbrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="@{viewModel.showResultStatus|| viewModel.cardsInsertedStatus ? View.GONE : View.VISIBLE}"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_visa" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_master" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_amex" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_dc" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_jcb" />
            </LinearLayout>

            <!-- PIN input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_90"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="@{viewModel.showPinpad ? View.VISIBLE : View.GONE}">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/totalLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="@{viewModel.amount}"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:keepScreenOn="true"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/enter_pin_text"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/pinpadEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/edittext_no_cursor"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:longClickable="false"
                        android:textCursorDrawable="@null"
                        android:textSize="40dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <!-- card insert AnimationView-->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view_insert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="@{viewModel.cardsInsertedStatus ? View.VISIBLE : View.GONE}"
            app:lottie_autoPlay="true"
            android:layout_alignParentBottom="true"
            app:lottie_fileName="insert_icc_card.json"
            app:lottie_imageAssetsFolder="iccimages/"
            app:lottie_loop="false" />
        <include
            layout="@layout/layout_payment_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:viewModel="@{viewModel}" />
    </RelativeLayout>
</layout>