<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.dspread.pos.ui.payment.PaymentMethodViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp">


        <!-- 顶部区域：退出按钮和总金额 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <!-- 退出按钮 -->
            <ImageButton
                android:id="@+id/closeButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:background="@null"
                android:contentDescription="Close"
                android:src="@mipmap/ic_close_black"
                binding:onClickCommand="@{viewModel.closeButton}" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- 总金额标题 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textColor="#ff030303"
                android:textSize="19sp" />

            <!-- 总金额 -->
            <TextView
                android:id="@+id/totalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.totalAmount}"
                android:textColor="#ff030303"
                android:textSize="44sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 支付方式标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="36dp"
            android:gravity="center"
            android:text="Select payment method"
            android:textColor="#ffcf131b"
            android:textSize="19sp" />

        <!-- 支付方式网格 -->
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            app:columnCount="2"
            app:rowCount="2">

            <!-- 第一行第一列：Card -->
            <LinearLayout
                android:id="@+id/cardOption"
                style="@style/LinPaymentLayout"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{() -> viewModel.onPaymentMethodSelected(0)}"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="0"
                app:layout_rowWeight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_salemethod_card" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Card"
                    android:textColor="#ff030303"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 第一行第二列：Scan Code -->
            <LinearLayout
                android:id="@+id/scanCodeOption"
                style="@style/LinPaymentLayout"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{() -> viewModel.onPaymentMethodSelected(1)}"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="0"
                app:layout_rowWeight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_salemethod_scan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan Code"
                    android:textColor="#ff030303"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 第二行第一列：Generate -->
            <LinearLayout
                android:id="@+id/generateOption"
                style="@style/LinPaymentLayout"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="@{() -> viewModel.onPaymentMethodSelected(2)}"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="1"
                app:layout_rowWeight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_salemethod_generate" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generate"
                    android:textColor="#ff030303"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 第二行第二列：Cash -->
            <LinearLayout
                android:id="@+id/cashOption"
                style="@style/LinPaymentLayout"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="@{() -> viewModel.onPaymentMethodSelected(3)}"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="1"
                app:layout_rowWeight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_salemethod_cash" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash"
                    android:textColor="#ff030303"
                    android:textSize="16sp" />
            </LinearLayout>

        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>
</layout>