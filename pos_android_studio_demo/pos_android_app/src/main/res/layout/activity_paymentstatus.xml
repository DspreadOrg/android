<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.dspread.pos.ui.payment.PaymentStatusViewModel" />
    </data>

    <!-- 交易信息区域 -->
    <!--    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:orientation="vertical"-->
    <!--        android:visibility="@{viewModel.TransactionResultStatus ? View.VISIBLE : View.GONE}">-->

    <!-- 交易结果状态显示 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="@{viewModel.isD70DisplayScreen ? View.GONE : View.VISIBLE}">


            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="60dp"
                android:src="@mipmap/payment_failed"
                android:visibility="@{viewModel.isSuccess ? View.GONE : View.VISIBLE}" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.isSuccess ? View.VISIBLE : View.GONE}"
                app:lottie_autoPlay="true"
                app:lottie_fileName="payment_success.json"
                app:lottie_loop="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="@{viewModel.isD70DisplayScreen ? View.VISIBLE : View.GONE}">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="5"
                android:src="@mipmap/icon_fail"
                android:visibility="@{viewModel.isSuccess ? View.GONE : View.VISIBLE}" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="5"
                android:src="@mipmap/icon_success"
                android:visibility="@{viewModel.isSuccess ? View.VISIBLE : View.GONE}" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="@{viewModel.isD70DisplayScreen ? View.GONE : View.VISIBLE}">

            <TextView
                android:id="@+id/tv_payment_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@{viewModel.isSuccess ? @string/payment_complete : @string/payment_failed}"
                android:textColor="@color/black"

                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_payment_result_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text="@{viewModel.amount}"
                android:textColor="@color/black"
                android:textSize="40dp"
                android:textStyle="bold"
                android:visibility="@{viewModel.isSuccess ? View.VISIBLE : View.GONE}" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="@{viewModel.isD70DisplayScreen ? View.VISIBLE : View.GONE}">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@{viewModel.isSuccess ? @string/payment_total : @string/payment_failed}"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:paddingRight="50dp"
                android:text="@{viewModel.amount}"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                android:visibility="@{viewModel.isSuccess ? View.VISIBLE : View.GONE}" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical"
            android:visibility="@{viewModel.isSuccess ? View.GONE : View.VISIBLE}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical"
                android:visibility="@{viewModel.isD70DisplayScreen ? View.GONE : View.VISIBLE}">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_more_options_selector"
                    android:text="Back"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    binding:onClickCommand="@{viewModel.continueTxnsCommand}"></androidx.appcompat.widget.AppCompatButton>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical"
                android:visibility="@{viewModel.isD70DisplayScreen ? View.VISIBLE : View.GONE}">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_more_options_selectors"
                    android:text="Back"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    binding:onClickCommand="@{viewModel.continueTxnsCommand}"></androidx.appcompat.widget.AppCompatButton>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical"
            android:visibility="@{viewModel.isSuccess ? View.VISIBLE : View.GONE}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical"
                android:visibility="@{viewModel.isD70DisplayScreen ? View.GONE : View.VISIBLE}"

                >

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_50"
                    android:background="@drawable/bg_done_selector"
                    android:text="Done"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    binding:onClickCommand="@{viewModel.continueTxnsCommand}"></androidx.appcompat.widget.AppCompatButton>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/bg_print_receipt_button_selector"
                    android:enabled="@{!viewModel.isPrinting}"
                    android:text="Print receipt"
                    android:textAllCaps="false"
                    android:textColor="@color/red"
                    android:textSize="20dp"
                    android:visibility="@{viewModel.isShouwPrinting ? View.VISIBLE : View.GONE}"
                    binding:onClickCommand="@{viewModel.sendReceiptCommand}"></androidx.appcompat.widget.AppCompatButton>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_more_options_selector"
                    android:text="More options"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="20dp"></androidx.appcompat.widget.AppCompatButton>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:visibility="@{viewModel.isD70DisplayScreen ? View.VISIBLE : View.GONE}">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_print_receipt_button_selectors"
                    android:enabled="@{!viewModel.isPrinting}"
                    android:text="Print receipt"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:visibility="@{viewModel.isShouwPrinting ? View.VISIBLE : View.GONE}"
                    binding:onClickCommand="@{viewModel.sendReceiptCommand}"></androidx.appcompat.widget.AppCompatButton>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_done_selectors"
                    android:text="Done"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    binding:onClickCommand="@{viewModel.continueTxnsCommand}"></androidx.appcompat.widget.AppCompatButton>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
