<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.dspread.pos.ui.transaction.reissue.TransactionReissueReceipViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                app:navigationIcon="@mipmap/ic_back"
                app:title="Reissue receipt"
                app:titleTextColor="@color/black" />

        </com.google.android.material.appbar.AppBarLayout>

        <!-- 标题文本 -->
        <TextView
            android:id="@+id/receiptTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Reissue receipt"
            android:textColor="@color/transaction_detail_text_light"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- 金额显示 -->
        <TextView
            android:id="@+id/amountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$500.00"
            android:textColor="@color/transaction_detail_black"
            android:textSize="32sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/receiptTitleText" />


        <Button
            android:id="@+id/printButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="11dp"
            android:background="@{viewModel.isD70? @drawable/print_button_rectangle : @drawable/print_button}"
            android:padding="12dp"
            android:text="Print"
            android:textColor="@color/white"
            android:textSize="19sp"
            app:layout_constraintBottom_toTopOf="@id/buttonsHorizontalContainer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
        />

        <LinearLayout
            android:id="@+id/buttonsHorizontalContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/moreOptionsButton"
            android:visibility="@{viewModel.isD70 ? View.VISIBLE : View.GONE}" >

            <!-- More options按钮 -->

            <!-- Done按钮 -->
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/button_white_gray_stroke_rectangle"
                android:padding="12dp"
                android:text="More options"
                android:textColor="@color/red_color"
                android:textSize="19sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_white_gray_stroke_rectangle"
                android:color="@color/transaction_detail_text_dark"
                android:padding="12dp"
                android:text="Done"
                android:textSize="19sp" />
        </LinearLayout>

        <!-- More options按钮 -->
        <Button
            android:id="@+id/moreOptionsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/button_white_red_stroke"
            android:padding="12dp"
            android:text="More options"
            android:textColor="@color/red_color"
            android:textSize="19sp"
            app:layout_constraintBottom_toTopOf="@id/doneButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="@{viewModel.isD70 ? View.GONE : View.VISIBLE}" />


        <!-- Done按钮 -->
        <Button
            android:id="@+id/doneButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/done_button"
            android:color="@color/transaction_detail_text_dark"
            android:padding="12dp"
            android:text="Done"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="@{viewModel.isD70 ? View.GONE : View.VISIBLE}" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>