<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.dspread.pos.ui.transaction.filter.TransactionFilterViewModel" />
    </data>

    <!-- Root layout remains vertical -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Title Bar (Unchanged) -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                app:navigationIcon="@mipmap/ic_back">
                <!-- Centered Title (Hidden by default) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filter"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:visibility="@{viewModel.isD70 ? View.GONE : View.VISIBLE}" />
                <!-- Centered Title (Hidden by default) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Filter"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:visibility="@{viewModel.isD70 ? View.VISIBLE : View.GONE}" />
                <!-- Clickable "Done" text on the right - Placed inside Toolbar to align with title -->
                <TextView
                    android:id="@+id/tv_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="8.5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Done"
                    android:textColor="@color/filter_red"
                    android:textSize="19sp"
                    android:visibility="@{viewModel.isD70 ? View.VISIBLE : View.GONE}"
                    binding:onClickCommand="@{viewModel.doneCommand}" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- 1. Transaction Date Filter (Using RadioGroup for single selection) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:text="Transaction Date"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <!-- Core Change 1: Replaced LinearLayout with RadioGroup (natively supports single selection) -->
        <RadioGroup
            android:id="@+id/rgDateFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="33dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Today Button (Selected by default) -->
            <RadioButton
                android:id="@+id/rbToday"
                style="@style/FilterButton"
                android:text="Today" />

            <!-- 3 Days Button -->
            <RadioButton
                android:id="@+id/rb3days"
                style="@style/FilterButton"
                android:layout_marginStart="10dp"
                android:text="3days" />

            <!-- All Button -->
            <RadioButton
                android:id="@+id/rbAll"
                style="@style/FilterButton"
                android:layout_marginStart="10dp"
                android:checked="true"
                android:text="All" />
        </RadioGroup>

        <!-- 2. Transaction Type Filter (Also using RadioGroup for single selection) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:text="Transaction Type"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:visibility="@{viewModel.isD70 ? View.VISIBLE : View.GONE}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="10dp"
            android:text="Transaction Type"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:visibility="@{viewModel.isD70 ? View.GONE : View.VISIBLE}" />

        <!-- Core Change 2: Transaction Type also uses RadioGroup -->
        <RadioGroup
            android:id="@+id/rgTypeFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="33dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Paid Button (Selected by default) -->
            <RadioButton
                android:id="@+id/rbPaid"
                style="@style/FilterButton"
                android:checked="true"
                android:text="Paid"
                android:textSize="16sp" />

            <!-- Voided Button -->
            <RadioButton
                android:id="@+id/rbVoided"
                style="@style/FilterButton"
                android:layout_marginStart="10dp"
                android:text="Voided" />

            <!-- Placeholder View (Maintains the same weight distribution as original layout) -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1" />
        </RadioGroup>

        <!-- Spacer (Pushes Done button to the bottom, unchanged) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Done Button (Unchanged) -->
        <Button
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/button_white_red_stroke"
            android:padding="12dp"
            android:text="Done"
            android:textColor="@color/red_color"
            android:textSize="19sp"
            android:visibility="@{viewModel.isD70 ? View.GONE : View.VISIBLE}"
            binding:onClickCommand="@{viewModel.doneCommand}" />

    </LinearLayout>
</layout>