<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="@dimen/dp_14">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">

        <!-- Left Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- First Row: Date and Amount -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/8/24"
                    android:textColor="#FF666666"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/amount_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$500.00"
                    android:textColor="#ff030303"
                    android:textSize="@dimen/sp_24" />

            </LinearLayout>

            <!-- Second Row: Card Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Card Icon -->
                <ImageView
                    android:id="@+id/card_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:src="@mipmap/ic_visa" />

                <!-- Card Number and Transaction Time -->
                <TextView
                    android:id="@+id/card_info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4712******8415-16:07"
                    android:textColor="#FF666666"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

        </LinearLayout>

        <!-- Right Section: Status Text -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/transaction_item_rounded_background"
            android:paddingHorizontal="14dp"
            android:paddingVertical="4dp"
            android:text="Paid"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#ffdddddd" />
</LinearLayout>